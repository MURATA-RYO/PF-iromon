<%= flash[:alert] %>

<h4 class ="text-center m-5 border-bottom p-1">Log in</h4>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  
  <div class ="pl-xl-5">
    <div class ="container">
      <div class="form-horizontal">
  
      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 32 %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class: "col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "current-password", size: 32 %>
        </div>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "Log in", class: "btn btn-sm btn-success" %>
      </div>
      </div>
    </div>
  </div>  
    <% end %>
    
    <%#= render "devise/shared/links" %>
