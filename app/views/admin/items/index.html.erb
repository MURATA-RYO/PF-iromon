<% if @item.errors.any? %>
  <%= @item.errors.count %>errors
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "items/list",item:@item,customer:@customer %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h1>思ひで</h1>

            <table class="table">
              <thead>
                <tr>
                  <td></td>
                  <td>推しもん</td>
                  <td>紹介</td>
                </tr>
              </thead>

          　 　<tbody>
          　 　 <% @items.each do |item| %>
                <tr>
                  <td>
                    <%= link_to customer_path(item.customer) do %>
                    <%= attachment_image_tag @customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                  </td>
                    <% end %>
                  <td><%= link_to item.name, item_path(item.id) %></td>
                  <td><%= item.guide %></td>
                  <td>
                    <%= render "favorites/favorite-btn", item: item %>
                  </td>
                  <td><p><%= link_to "コメント数#{item.comments.count} ", item_path(item.id) %></p>
                </tr>
                <% end %>
              </tbody>
            </table>
      </div>
  </div>
</div>