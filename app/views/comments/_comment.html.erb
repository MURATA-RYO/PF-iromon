<table class="table">
  <thead>
    <tr>
      <% item.comments.each do |comment| %>
      <td><strong>来遊者</strong></td>
      <td><strong>ニックネーム</strong></td>
      <td><strong>コメント</strong></td>
    </tr>
  </thead>
 
  <tbody>
    <tr>
      <td>
        
        <%= link_to customer_path(comment.customer) do %>
        <%= attachment_image_tag comment.customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
        <% end %>
      </td> 
        
      <td><%= comment.customer.name %></td>
      
      <td><%= comment.comment %></td>
          
      <td>
        <% if comment.customer == current_customer %>
        <%= link_to "", item_comment_path(comment.item, comment), method: :delete, remote: true, class:"btn btn-danger btn-sm btn-block fas fa-trash-alt" %>
        <% end %>
      </td>
    </tr> 
        <% end %>
  </tbody>
</table>