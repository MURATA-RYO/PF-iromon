<div class="container">
  <div class="row">
    <div class="col-md-3">
      <br>
      <%= render "customers/list",item:@item,customer:@customer %>
  　</div>
      
    <div class="col-md-8 offset-md-1">
      <br>
      <h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">来遊者一覧</font></span></h2>

        <table class="table table-striped table-hover">
          <thead>
            <tr class="shadow">
              <th><strong><font color="#E2E3CB">絵姿</font></strong></th>
              <th><strong><font color="#E2E3CB">愛称</font></strong></th>
              <th><strong><font color="#E2E3CB">思ひで録</font></strong></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= attachment_image_tag customer, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"rounded" %></td>
              <td><span class="shadow2"><%= customer.name %></span></td>
              <td><%= link_to "", customer_path(customer.id), class: "btn btn-outline-warning w-75 fas fa-list-alt rounded-pill" %></td>
            </tr>
            <% end %>
              <br>
              <div class="pagination">
              <%= paginate @customers %>
              </div>
          </tbody>
        </table>
    </div>
  </div>
</div>