<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "customers/list",item:@item,customer:@customer %>
  　</div>

      <div class="col-md-8 offset-md-1">
        <h2><span class="badge badge-pill badge-dark">来遊者一覧</span></h2>

            <table class="table">
              <thead>
                <tr>
                  <th>イメージ</th>
                  <th>ニックネーム</th>
                  <th>フォロー</th>
                  <!--<th>フォロワー</th>-->
                  <th>思ひで一覧</th>
                </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                <tr>
                  <td><%= attachment_image_tag customer, :profile_image, :fill, 80, 80, fallback: "no_image.jpg"%></td>
                  <td><span><%= customer.name %></span></td>
                  <!--<td><%#= customer.followings.count %></td>-->
                  <!--<td><%#= customer.followers.count %></td>-->
                  <td>
                    <% if current_customer.following?(customer) %>
                      <%= link_to "", customer_relationships_path(customer.id), method: :delete, class: "btn btn-info btn-block fas fa-praying-hands" %>
                    <% else %>
                      <%= link_to "", customer_relationships_path(customer.id), method: :post, class: "btn btn-success btn-block fas fa-thumbs-up" %>
                    <% end %>
                  </td>
                  <td><%= link_to "", customer_path(customer.id), class: "btn btn-success w-75 fas fa-list-alt" %></td>
                </tr>
          <% end %>
                <br>
                <div class="pagination">
                <%= paginate @customers %>
                </div>
              </tbody>
            </table>
      </div>
  </div>
</div>