<h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">来遊者</font></span></h2>
  <br>
  <div class="text-center">
    <%= attachment_image_tag customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"img-thumbnail" %>
  </div>
    <br>
    <table class="table">
      <tr>
        <td><strong>愛称</strong></td>
        <td><%= customer.name %></td>
      </tr>
      <tr>
        <td><strong>一言</strong></td>
        <td><%= customer.introduction %></td>
      </tr>
      <tr>
        <td><strong>関心</strong></td>
        <td><%= link_to customer.followings.count, customer_followings_path(customer), :style=>"color:white;" %></td>
      </tr>
      <tr>
        <td><strong>愛好者</strong></td>
        <td><%= link_to customer.followers.count, customer_followers_path(customer), :style=>"color:white;" %></td>
      </tr>
    </table>

      <% if customer_signed_in? && current_customer != @customer %>
      <% if current_customer.following?(customer) %>
        <%= link_to "", customer_relationships_path(customer.id), method: :delete, class: "btn btn-info btn-block fas fa-praying-hands" %>
      <% else %>
        <%= link_to "", customer_relationships_path(customer.id), method: :post, class: "btn btn-success btn-block fas fa-thumbs-up" %>
      <% end %>
      <% end %>

    <br>
    <br>
    <%= link_to "", edit_customer_path(customer), class: "btn btn-outline-warning btn-block fas fa-theater-masks" %>
    <br></br>
    <%= link_to "思ひで投稿", '/items/new', class: "btn btn-sm btn-block btn-outline-warning" %>
    <br>
    <%= form_with(model: @tag, url: tags_path, method: :get, local: true) do |f| %>
      <% f.label :tag_id %>
      <%= f.collection_select :tag_id, Tag.all, :id, :tag_name %>
      <%= f.submit 'タグ検索' %>
    <% end %>