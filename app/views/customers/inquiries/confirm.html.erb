<div class ="pl-xl-5">
  <div class ="container">
    <div class="form-horizontal">
      <div class="page-header">
        <h2><span class="badge badge-pill badge-dark">お問い合わせ</span></h2>
      </div>

      <%= form_with model:@inquiry,url:inquiries_thanks_path,method: :post,local: true do |f| %>
        <table class="table">
          <tr>
            <th>ニックネーム</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        
        <div class="text-center">
        <%= f.submit '送信', :class => 'btn btn-sm w-50 btn-primary' %>
        </div>      
      <% end %>
    </div>  
  </div>    
</div>      