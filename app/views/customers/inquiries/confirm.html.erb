<div class="d-flex align-items-center" style="height:860px;">
  <div class ="container">
    <div class="form-horizontal">
      <div class="text-center">
        <h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">問掛け内容</font></span></h2>
        <%= form_with model:@inquiry,url:inquiries_thanks_path,method: :post,local: true do |f| %>
      </div>

        <table class="table">
          <tr>
            <th><font color="#E2E3CB">愛称</font></th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th><font color="#E2E3CB">メールアドレス</font></th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th><font color="#E2E3CB">問掛け内容</font></th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        
        <div class="text-center">
          <%= f.submit "送信", :class => "btn btn-sm w-50 btn-outline-warning" %>
        </div>      
      <% end %>
    </div>  
  </div>    
</div>      
      