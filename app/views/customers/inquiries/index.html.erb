<%= form_with model:@inquiry,url:inquiries_confirm_path,method: :post,local: true do |f| %>
<div class ="pl-xl-5">
  <div class ="container">
    <div class="form-horizontal">
      <div class="page-header">
        <h2><span class="badge badge-pill badge-dark">お問い合わせ</span></h2>
      </div>
      
        <% if @inquiry.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <table class="table">
          <tr>
            <th>ニックネーム<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, size: 28 %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, size: 28 %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message %></td>
          </tr>
        </table>
        
        <div class="text-center">
        <%= f.submit '確認', class: 'btn w-50 btn-sm btn-primary' %>
        </div>
      <% end %>
      </dvi>
    </dvi>  
  </dvi>    