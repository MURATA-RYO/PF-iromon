<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">関心一覧</font></span></h2>

      <% if @customers.exists? %>
      <br>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="shadow">
            <td><strong>絵姿</strong></td>
            <td><strong>愛称</strong></td>
            <td><strong>詳細</strong></td>
          </tr>
        </thead>
    
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= attachment_image_tag customer, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"rounded" %></td>
            <td><strong class="shadow2"><%= customer.name %></strong></td>
            <!--<td>フォロー数: <%#= customer.followings.count %></td>-->
            <!--<td>フォロワー数: <%#= customer.followers.count %></td>-->
            <td><%= link_to "", customer_path(customer.id), class: "btn btn-outline-info w-50 fas fa-hat-wizard rounded-pill" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <div class="text-center">
      <h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">関心者無し</font></span></h2>
      </div>
      <% end %>
    </div>
  </div>
</div>