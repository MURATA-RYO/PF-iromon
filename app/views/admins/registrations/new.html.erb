<div class="d-flex align-items-center" style="height:860px;">
  <div class="container">
    <div class="form-horizontal">

    <h3 class ="text-center m-5 border-bottom p-2"><strong><font color="#E2E3CB">管理者登録</font></strong></h3>
    <%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

      <div class="container">
        <div class="form-horizontal">
          
          <div class="mx-auto" style="width: 570px;">
          <div class="form-group row">
            <%= f.label :管理者名, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
            <div class="col-sm-7">
            <%= f.text_field :name, autofocus: true, size: 32 %>
            </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
            <div class="col-sm-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 32 %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :パスワード（６文字以上）, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
            <% if @minimum_password_length %>
            <% end %>
            <div class="col-sm-7">
            <%= f.password_field :password, autocomplete: "new-password", size: 32 %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :パスワード（確認用）, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
            <div class="col-sm-7">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 32 %>
            </div>
          </div>

            <div class="text-center">
              <%= f.submit "登録", class: "btn btn-sm w-100 btn-outline-warning rounded-pill" %>
            </div>
              <% end %>
        </div>
      </div>
    </div>
      <%#= render "admins/shared/links" %>
