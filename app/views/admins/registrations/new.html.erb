<h4 class ="text-center m-5 border-bottom p-1">管理者登録</h4>

<%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

<div class="pl-xl-5">
    <div class="container">
      <div class="form-horizontal">
        
        <div class="form-group row">
          <%= f.label :管理者名, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
          <%= f.text_field :name, autofocus: true, size: 32 %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 32 %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :パスワード（６文字以上）, class: "col-sm-3 col-form-label" %>
          <% if @minimum_password_length %>
          <% end %>
          <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "new-password", size: 32 %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :パスワード（確認用）, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 32 %>
          </div>
        </div>
        
        <div class="col-md-8 text-center">
          <%= f.submit "登録", class: "btn btn-sm btn-block btn-success" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
      <%#= render "admins/shared/links" %>
