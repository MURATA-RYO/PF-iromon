<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2><span class="badge badge-pill badge-dark"><font color="#E2E3CB">管理者側来遊者一覧</font></span></h2>

      <br>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="shadow">
            <th><strong><font color="#E2E3CB">来遊者</font></strong></th>
            <th><strong><font color="#E2E3CB">抹消</font></strong></th>
          </tr>
        </thead>
      
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><strong class="shadow2"><%= customer.name %></strong></td>
            <td><%= link_to '', admins_customer_path(customer.id), method: :delete, class: "btn btn-sm w-50 btn-outline-danger fas fa-skull rounded-pill" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
