        <div class="col-lg-6">
          <h5><strong>推し画像</strong></h5>
          <%= attachment_image_tag @item, :image, :fill, 350, 350, format: 'no_image.jpg' %>
        </div>

        <div class="col-lg-6">
          <div class="table table-borderless">  
            <tr>
              <h5><strong>推しもん</strong></h5>
              <p><%= @item.name %></p>
            </tr>
            
            <tr>
              <h5><strong>紹介</strong></h5>
              <p><%= @item.guide %></p>
            </tr>
          
            <tr>
              <h5><strong>懐かしいいね</strong></h5>
              <p><%= render "favorites/favorite-btn", item: @item %></p>
            </tr>
              
            <tr>
              <h5><strong>コメント数</strong></h5>
              <p><span class="far fa-comment"> <%= @item.comments.count %></span></p>
            </tr>

            <%= render "comments/comment", item: @item %>

          </div>
                    
              <div class="new-comment">
                <%= form_with(model:[@item, @comment], remote: true) do |f| %>
                <%= f.text_area :comment, size:"90x5",placeholder: "コメントをここに" %>
                <br><%= f.submit "送信" %>
                <% end %>
              </div>
              
              <br>
              <div class="pull-left">
              <% if @customer.id == current_customer.id %>
              <%= link_to edit_customer_path(current_customer.id) do %>
              <%= link_to "", edit_item_path(@item.id), class: "btn btn-primary btn-sm w-25 fas fa-edit" %>
              <%= link_to "", item_path(@item.id), method: :delete, "deta-confirm" => "削除しますか？", class: "btn btn-danger w-25 btn-sm fas fa-trash-alt" %>
              <% end %>
              <% end %>
              </div>
       </div>
  </div>
