<div class ="container">
  <div class="form-horizontal">

    <h2><span class="badge badge-pill badge-dark">思ひで</span></h2>
    <%= form_with model:@item, url:'/items', local: true do |f| %>
    
    <div class="form-group row">
      <%= f.label :推し画像, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= f.attachment_field :image %>
      </div>
    </div>
     
    <div class="form-group row">
      <%= f.label :推しもん, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= f.text_field :name, size: 30 %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :紹介, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= f.text_area :guide %>
      </div>
    </div>
    
    <br><%= f.submit '寄稿', class: "btn btn-success w-50 btn-sm" %>
    <% end %>
  </div>
</div>  