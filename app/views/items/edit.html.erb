  <div class="d-flex align-items-center" style="height:860px;">
  <div class="container">
    <div class="form-horizontal">

      <h3 class ="text-center m-5 border-bottom p-2"><strong><font color="#E2E3CB">思ひでの撰</font></strong></h3>
        <%= form_with model:@item, url:"/items/#{@item.id}", local:true do |f| %>

        <div class="mx-auto" style="width: 480px;">
        <div class="form-group row">
          <%= f.label :推し画像, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
          <div class="col-sm-7">
          <%= f.attachment_field :image %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :推しもん, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
          <div class="col-sm-7">
          <%= f.text_field :name, size: 30 %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :紹介, class: "col-sm-5 col-form-label shadow", :style=>"color:#E2E3CB;" %>
          <div class="col-sm-7">
          <%= f.text_field :guide, size: 30 %>
          </div>
        </div>

        <div class="text-center">
        <%= f.submit "編集", class: "btn btn-outline-warning w-100 btn-sm rounded-pill" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>